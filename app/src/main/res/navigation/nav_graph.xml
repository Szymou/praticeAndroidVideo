<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="top.szymou.myvideo.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first" >

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />

        <action
            android:id="@+id/action_FirstFragment_to_Video"
            app:destination="@id/VideoFragment" />

        <action
            android:id="@+id/action_FirstFragment_to_DetailsVideoFragment"
            app:destination="@id/DetailsVideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="top.szymou.myvideo.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second" >

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/VideoFragment"
        android:name="top.szymou.myvideo.VideoFragment"
        android:label="视频页"
        tools:layout="@layout/fragment_video" >

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/DetailsVideoFragment"
        android:name="top.szymou.myvideo.DetailsVideoFragment"
        android:label="视频页1"
        tools:layout="@layout/fragment_details_video" >

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>